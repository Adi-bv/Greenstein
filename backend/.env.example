# This is an example environment file. Copy it to .env and fill in your actual values.

# The default database URL is for a local SQLite database.
# For PostgreSQL, it would look like: postgresql://user:password@host:port/dbname
DATABASE_URL="sqlite:///./greenstein.db"

# Your OpenAI API key
OPENAI_API_KEY="your_openai_api_key_here"

# Telegram Bot Configuration
telegram_token="your_telegram_bot_token_here"
bot_username="YourBotUsername"

# The public URL of your backend, required for the Telegram bot to communicate
backend_url="http://localhost:8000"
